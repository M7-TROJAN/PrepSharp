@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex flex-column flex-root">
    <!--begin::Page bg image-->
    <style>
        body {
            background-image: url('/assets/images/bg10.jpeg');
        }

        [data-theme="dark"] body {
            background-image: url('/assets/images/bg10-dark.jpeg');
        }
    </style>
    <!--end::Page bg image-->
    <!--begin::Authentication - Sign-in -->
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!--begin::Aside-->
        <div class="d-flex flex-lg-row-fluid hidden-on-mobile">
            <!--begin::Content-->
            <div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
                <!--begin::Image-->
                <img class="theme-light-show mx-auto mw-100 w-150px w-lg-500px mb-10" src="~/assets/images/login.svg" alt="" />
                <img class="theme-dark-show mx-auto mw-100 w-150px w-lg-500px mb-10" src="~/assets/images/login.svg" alt="" />
                <!--end::Image-->
                <!--begin::Title-->
                <h1 class="text-gray-800 fs-2qx fw-bold text-center mb-7">PrepSharp, by TROJAN</h1>
                <!--end::Title-->
                <!--begin::Text-->
                <div class="text-gray-600 fs-base text-center fw-semibold">
                    Welcome to <span class="fw-bold text-primary">PrepSharp</span>, your gateway to a world of ...
                    <br />Explore a vast collection of ...
                </div>
                <!--end::Text-->
            </div>
            <!--end::Content-->
        </div>
        <!--begin::Aside-->
        <!--begin::Body-->
        <div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
            <!--begin::Wrapper-->
            <div class="bg-body d-flex flex-center rounded-4 w-md-600px p-10">
                <!--begin::Content-->
                <div class="w-md-400px">
                    <!--begin::Heading-->
                    <div class="text-center mb-11">
                        <!--begin::Title-->
                        <h1 class="text-gray-900 fw-bolder mb-3">
                            Sign In
                        </h1>
                        <!--end::Title-->
                        <!--begin::Subtitle-->
                        <div class="text-gray-500 fw-semibold fs-6">
                            Your Social Campaigns
                        </div>
                        <!--end::Subtitle--->
                    </div>
                    <!--end::Heading-->
                    <!--begin::Login options-->
                    <div class="row g-3 mb-9">
                        <!--begin::Col-->
                        <div class="col-md-6">
                            <!--begin::Google login form-->
                            <form asp-page="./ExternalLogin"
                                  asp-route-returnUrl="@Model.ReturnUrl"
                                  method="post"
                                  class="d-inline w-100">
                                <button type="submit"
                                        name="provider"
                                        value="Google"
                                        class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                                    <img alt="Logo" src="~/assets/images/google-icon.svg" class="h-15px me-3">
                                    Sign in with Google
                                </button>
                            </form>
                            <!--end::Google login form-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-md-6">
                            <!--begin::Facebook login form-->
                            <form asp-page="./ExternalLogin"
                                  asp-route-returnUrl="@Model.ReturnUrl"
                                  method="post"
                                  class="d-inline w-100">
                                <button type="submit"
                                        name="provider"
                                        value="Facebook"
                                        class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                                    <img alt="Logo" src="~/assets/images/facebook-3.svg" class="h-15px me-3">
                                    Sign in with Facebook
                                </button>
                            </form>
                            <!--end::Facebook login form-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Login options-->
                    <!--begin::Separator-->
                    <div class="separator separator-content my-14">
                        <span class="w-125px text-gray-500 fw-semibold fs-7">Or with email</span>
                    </div>
                    <!--end::Separator-->
                    <!--begin::Form-->
                    <form class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework" novalidate="novalidate" method="post">
                        <!--begin::Input group-->
                        <div class="fv-row mb-8">
                            <!--begin::Email-->
                            <input type="text" placeholder="Username/Email" asp-for="Input.Username" autocomplete="off" class="form-control bg-transparent" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                            <!--end::Email-->
                        </div>
                        <!--end::Input group-->
                        <!--begin::Input group=-->
                        <div class="fv-row mb-3">
                            <!--begin::Password-->
                            <div class="input-group">
                                <input type="password" placeholder="Password" asp-for="Input.Password" autocomplete="off" class="form-control bg-transparent" id="passwordField" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <!--end::Password-->
                        </div>
                        <!--end::Input group=-->
                        <!--begin:Input group RememberMachine-->
                        <div class="row mb-2 mt-3">
                            <div class="col">
                                <div class="form-check form-switch form-check-solid form-check-custom mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe">
                                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                                </div>
                            </div>
                        </div>
                        <!--end:Input group RememberMachine-->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!--begin::Wrapper-->
                        <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                            <div></div>
                            <!--begin::Link-->
                            <a asp-page="./ForgotPassword" asp-route-returnUrl="/Identity/Account/Login">Forgot your password?</a>
                            <!--end::Link-->
                        </div>
                        <!--end::Wrapper-->
                        <!--begin::Submit button-->
                        <div class="d-grid mb-10">
                            <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
                                <!--begin::Indicator label-->
                                <span class="indicator-label">Sign In</span>
                                <!--end::Indicator label-->
                                <!--begin::Indicator progress-->
                                <span class="indicator-progress">
                                    Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                                <!--end::Indicator progress-->
                            </button>
                        </div>
                        <!--end::Submit button-->
                        <!--begin::Sign up-->
                        <div class="text-gray-500 text-center fw-semibold fs-6">
                            Not a Member yet?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">
                                Sign up
                            </a>
                        </div>
                        <!--end::Sign up-->
                    </form>
                    <!--end::Form-->
                </div>
                <!--end::Content-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Body-->
    </div>
    <!--end::Authentication - Sign-in-->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}